<section id="hero" class="hero section pb-3">
  <div class="container">
    <div class="row hero-item">
      <div
        class="col-lg-7 order-2 order-lg-1 d-flex flex-column justify-content-center mt-0"
        data-aos="zoom-out"
      >
        <p>MALAYSIAN INCORPORATED COMPANY</p>
        <h1>
          Specialized in Engineering & Maintenance Services For Oil & Gas,
          Energy, Maritime & General Industries
        </h1>
        <div class="d-flex">
          <a href="about.html" class="btn-get-started mt-4">About Us</a>
        </div>
      </div>
      <div
        class="col-lg-5 order-1 order-lg-2 d-flex flex-column justify-content-center mt-0"
        data-aos="zoom-out"
      >
        <div class="hero-img d-none d-lg-block">
          <img src="{{ rootPath }}assets/images/hero-img-squared.jpeg" alt="" />
        </div>
      </div>
    </div>
  </div>
</section>

<section class="infos section" style="background-color: #09417D;">
  <div class="container">
    <div class="row">
      <div class="col-lg-7">
        <h1 class="text-center text-lg-start">
          Our <span class="dark-green-text">Philosophy.</span>
        </h1>
        <div class="row mt-4 mx-lg-4">
          {% for item in our_philosophy %}
          <div class="d-flex align-items-center mb-4">
            {#
            <img
              src="{{ item.img }}"
              width="84"
              height="84"
              alt="{{ item.alt }}"
            />
            #}
            <div class="info-icon rounded"><i class="{{ item.icon }}"></i></div>
            <div class="flex-column mx-4">
              <h3 class="fw-bold text-white mb-2">{{ item.title }}</h3>
              <p class="info-desc text-lg-start">{{ item.description }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
      <div class="col-lg-5 mb-4 mb-lg-0">
        <div class="text-center text-lg-start row">
          <h1><span class="dark-green-text">Vision.</span></h1>
          <h5 class="display-5 fw-bolders info-text mt-4">
            Leading Engineering Solution Powerhouse by
            <span class="dark-green-text">2027.</span>
          </h5>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="our-services" class="our-services section pb-0">
  <div class="container">
    <div class="row gy-3">
      <div class="col-lg-5" data-aos="fade-up" data-aos-delay="100">
        <img
          src="{{ rootPath }}assets/images/services-img-cropped.png"
          alt=""
          class="img-fluid"
        />
      </div>

      <div
        class="col-lg-7 d-flex flex-column justify-content-center position-relative"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        <div class="about-content ps-0 ps-lg-3">
          <div class="services-list">
            <h3>Our Services</h3>
            <ul>
              {% for item in our_services %}
              <li>{{ item }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
        <a
          class="our-services-btn mt-4 mt-lg-0 ms-0 ms-lg-3"
          href="services.html"
          >Learn More</a
        >
      </div>
    </div>
  </div>
</section>

<section id="clients" class="clients section">
  <div class="container section-title" data-aos="fade-up">
    <p>Client</p>
  </div>
  <div class="container">
    <div class="swiper init-swiper">
      <script type="application/json" class="swiper-config">
        {
          "loop": true,
          "speed": 600,
          "autoplay": {
            "delay": 5000
          },
          "slidesPerView": "auto",
          "pagination": {
            "el": ".swiper-pagination",
            "type": "bullets",
            "clickable": true
          },
          "breakpoints": {
            "320": {
              "slidesPerView": 2,
              "spaceBetween": 40
            },
            "480": {
              "slidesPerView": 3,
              "spaceBetween": 60
            },
            "640": {
              "slidesPerView": 4,
              "spaceBetween": 80
            },
            "992": {
              "slidesPerView": 6,
              "spaceBetween": 120
            }
          }
        }
      </script>
      <div class="swiper-wrapper align-items-center">
        {% for item in potential_client %}
        <div class="swiper-slide">
          <img
            src="{{rootPath}}assets/images/clients/{{item.src}}"
            class="img-fluid client-logo"
            alt=""
          />
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<div id="sticky-bar" class="sticky-bar">
  <div class="container">
    <div
      class="d-flex align-items-center justify-content-between flex-column flex-lg-row"
    >
      <h5 class="mb-0 text-white text-center text-md-start">
        LET'S WORK ON YOUR EXCITING NEW PROJECT TOGETHER!
      </h5>
      <a href="contact.html" class="contact-us-btn mt-3 mt-lg-0"
        >CONTACT US <i class="bi bi-chevron-right"></i
      ></a>
    </div>
  </div>
</div>
